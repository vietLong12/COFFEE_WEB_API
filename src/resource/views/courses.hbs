<h1 class="mt-4">{{title}}</h1>

<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 mb-5">
            <div class="card" style="width: 18rem;">
                <a href="/courses/{{this.slug}}" class="text-decoration-none text-muted">
                    <img src={{this.image}} class="card-img-top" alt="...">
                </a>

                <div class="card-body">
                    <a href="/courses/{{this.slug}}" class="text-decoration-none text-muted">
                        <h5 class="card-title cart-name">{{this.name}}</h5>
                    </a>
                    <p class="card-text cart-description overflow-hidden">{{this.description}}</p>
